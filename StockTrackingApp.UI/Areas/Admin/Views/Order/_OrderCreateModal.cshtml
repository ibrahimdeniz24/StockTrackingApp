@using StockTrackingApp.Entities.Enums
@model StockTrackingApp.UI.Areas.Admin.Models.OrderVMs.AdminOrderCreateVM

<div class="modal fade" id="orderCreateModal" tabindex="-1" aria-labelledby="createOrderModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createOrderModalLabel">Yeni Sipariş Oluştur</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Create" id="orderForm">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="OrderDate" class="control-label"></label>
                                    <input type="datetime-local" asp-for="OrderDate" class="form-control"
                                           value="@(Model?.OrderDate.ToString("yyyy-MM-ddTHH:mm") ?? DateTime.Now.ToString("yyyy-MM-ddTHH:mm"))" required />
                                    <span asp-validation-for="OrderDate" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="DeliveryDate" class="control-label">Teslimat Tarihi ve Saati</label>
                                    <input type="datetime-local" asp-for="DeliveryDate" class="form-control"
                                           value="@(Model?.DeliveryDate.ToString("yyyy-MM-ddTHH:mm") ?? DateTime.Now.ToString("yyyy-MM-ddTHH:mm"))" required />
                                    <span asp-validation-for="DeliveryDate" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="CustomerId" class="control-label"></label>
                                <select id="customerDropdown" name="CustomerId" class="form-control" style="width: 100%;" required>
                                    <option value="">Müşteri Seç</option>
                                </select>
                                <span asp-validation-for="CustomerId" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="OrderStatus">Sipariş Durumu</label>
                                <select asp-for="OrderStatus" class="form-control" required>
                                    @foreach (var status in Enum.GetValues(typeof(OrderStatus)))
                                    {
                                        <option value="@status">@status</option>
                                    }
                                </select>
                                <span asp-validation-for="OrderStatus" class="text-danger"></span>
                            </div>

                            <h4>Sipariş Detayları</h4>

                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Stok Adı</th>
                                        <th>Adet</th>
                                        <th>Birim Fiyat</th>
                                        <th>Tutar</th>
                                        <th>Kdv Oranı</th>
                                        <th>Toplam Tutar</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody id="orderDetailsBody">
                                    <tr>
                                        <td>
                                            <select id="stockDropdown0" name="AdminOrderDetailCreateVMs[0].StockId" class="form-control stockDropdown" required></select>
                                        </td>
                                        <td>
                                            <input name="AdminOrderDetailCreateVMs[0].Quantity" type="number" class="form-control quantity" oninput="calculateTotal(this)" required />
                                        </td>
                                        <td>
                                            <input name="AdminOrderDetailCreateVMs[0].UnitPrice" type="number" step="0.01" class="form-control unitPrice" min="1" oninput="calculateTotal(this)" required />
                                        </td>
                                        <td>
                                            <input name="AdminOrderDetailCreateVMs[0].TotalPriceExcludingVAT" type="number" step="0.01" class="form-control TotalPriceExcludingVAT" readonly />
                                        </td>
                                        <td>
                                            <select name="AdminOrderDetailCreateVMs[0].VatRate" class="form-control vatRate " required onchange="calculateTotal(this)">
                                                @foreach (var vatRate in Enum.GetValues(typeof(VatRate)))
                                                {
                                                    <option value="@((int)vatRate)">@vatRate</option>
                                                }
                                            </select>

                                        </td>
                                        <td>
                                            <input name="AdminOrderDetailCreateVMs[0].TotalPriceIncludingVAT" type="number" step="0.01" class="form-control totalPriceVat" readonly />
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-danger" onclick="removeOrderDetail(this)">Sil</button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <button type="button" class="btn btn-secondary" onclick="addOrderDetail()">Yeni Satır Ekle</button>

                            <!-- Toplam Tutar -->
                            <div class="mt-3">
                                <label for="TotalAmount">Toplam Sipariş Tutarı (KDV Hariç)</label>
                                <input id="TotalAmount" name="TotalAmount" type="number" class="form-control" readonly />
                            </div>
                            <div class="form-group">
                                <label for="TotalVat">Toplam KDV Tutarı:</label>
                                <input id="TotalVat" type="text" class="form-control" readonly />
                            </div>

                            <div class="form-group">
                                <label for="TotalWithVat">Toplam KDV Dahil Tutar:</label>
                                <input id="TotalWithVat" type="text" class="form-control" readonly />
                            </div>

                            <div class="form-group mb-3">
                                <input type="submit" value="Oluştur" class="btn btn-success" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>
